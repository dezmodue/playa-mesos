{
  "id": "my-marathon-app",
  "cmd": "python3 -m http.server 8080",
  "cpus": 0.1,
  "mem": 32,
  "disk": 0,
  "instances": 2,
  "taskKillGracePeriodSeconds": 5,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "python:3",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "servicePort": 1337
        }
      ],
      "parameters": []
    },
    "volumes": []
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/",
      "portIndex": 0,
      "gracePeriodSeconds": 30,
      "intervalSeconds": 1,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 10
    }
  ]
}
